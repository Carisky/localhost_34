{{ header }}
<div id="common-success">
	<div class="page-wrapper container">
		<h1 class="page-title cnt">{{heading_title}}</h1>
		<div class="breadcrumbs df fww">
		{% for breadcrumb in breadcrumbs %}
			{% if loop.last %}
			<span>{{ breadcrumb.text }}</span>
			{% else %}
			<a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
			<i>/</i>
			{% endif %}
		{% endfor %}
		</div>
		<div id="content" class="info-page">
			{{ content_top }}
			{{ text_message }}
			<div class="buttons">
				<a href="{{ continue }}" class="form-btn btn df aic jcc">{{ button_continue }}</a>
			</div>
		</div>
		{{ content_bottom }}
	</div>
	{{ column_left }}
    {{ column_right }}
</div>
{{ footer }}
</body>
</html>