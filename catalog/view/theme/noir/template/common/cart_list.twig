{% if products %}
<div class="inner">
{% for product in products %}
<div class="cart-item df aic jcsb" data-cart-item>
	<a class="cart-image" href="{{ product.href }}"><img src="{{ product.thumb }}" alt="{{ product.name }}"></a>
	<a class="cart-name" href="{{ product.href }}">{{ product.name }}</a>
	<div class="cart-quantity df" data-quantity data-min="{{ product.minimum }}" data-max="{{product.stock}}" data-cart="{{product.cart_id}}">
		<div class="gnt-btn df jcc aic" data-qnt-btn="0">-</div>
		<input type="number" name="quantity" value="{{ product.quantity }}" data-input-quantity class="form-control cnt">
		<div class="gnt-btn df jcc aic" data-qnt-btn="1">+</div>
	</div>
	<div class="cart-sum">{{ product.total }}</div>
	<div class="cart-remove">
		<button type="button" class="btn-hidden" onclick="cart.remove({{ product.cart_id }});">
			<svg width="16" height="24"><use xlink:href="/catalog/view/theme/noir/img/sprite.svg#trash"></use></svg>
		</button>
	</div>
</div>
{% endfor %}
</div>
<div class="cart-total-wrap df aic jcsb">
	<a href="{{checkout}}" class="btn df aic jcc">
		ZŁÓŻ ZAMÓWIENIE
		<svg width="24" height="27"><use xlink:href="/catalog/view/theme/noir/img/sprite.svg#cart"></use></svg>
	</a>
	<div class="totals">
		<label>Wszystko</label>
		<div class="cart-total">{{ total }}</div>
	</div>
</div>
{% else %}
<p>Koszyk jest pusty</p>
{% endif %}