<head>
	<link href="catalog/view/theme/default/stylesheet/common/auth.css" type="text/css" rel="stylesheet"/>
</head>

{{ header }}
<div id="account-register">
	<h1>ZAREJESTRUJ SIĘ</h1>
	<p>masz już konto<a href="index.php?route=account/login"> zaloguj się</a></p>

	<form id="form-register" action="{{ register }}" method="post" data-oc-toggle="ajax">
		{% if customer_groups|length > 1 %}
			<div>
				<select name="customer_group_id" id="input-customer-group">
					{% for customer_group in customer_groups %}
						<option value="{{ customer_group.customer_group_id }}" {% if customer_group.customer_group_id == customer_group_id %} selected {% endif %}>{{ customer_group.name }}</option>
					{% endfor %}
				</select>
			</div>
		{% endif %}

		<div class="form-group">
			<input type="text" name="firstname" value="" placeholder="{{ entry_firstname }}" id="input-firstname"/>
			<div id="error-firstname"></div>
		</div>

		<div class="form-group">
			<input type="text" name="lastname" value="" placeholder="{{ entry_lastname }}" id="input-lastname"/>
			<div id="error-lastname"></div>
		</div>

		<div class="form-group">
			<input type="email" name="email" value="" placeholder="{{ entry_email }}" id="input-email"/>
			<div id="error-email"></div>
		</div>

		{% if config_telephone_display %}
			<div class="form-group">
				<input type="tel" name="telephone" value="" placeholder="{{ entry_telephone }}" id="input-telephone"/>
				<div id="error-telephone"></div>
			</div>
		{% endif %}

		<div class="form-group">
			<input type="password" name="password" value="" placeholder="{{ entry_password }}" id="input-password"/>
			<div id="error-password"></div>
		</div>

		<div class="form-group">
			<div>
				<p>Newsletter</p>
				<input type="hidden" name="newsletter" value="0"/>
				<input type="checkbox" name="newsletter" value="1" id="input-newsletter"/>
			</div>
		</div>

		{{ captcha }}
		<div class="form-group">
			{% if text_agree %}
				<div>
					<p>{{ text_agree }}</p>
					<input type="checkbox" name="agree" value="1"/>
				</div>
			{% endif %}
		</div>
		<div class="form-group">
			<button type="submit">ZAREJESTRUJ SIĘ</button>
		</div>
	</form>

	<div>
		<a href="{{ login }}">{{ text_login_button }}</a>
	</div>
</div>

{{ footer }}
